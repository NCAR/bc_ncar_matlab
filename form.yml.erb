---
cluster:
  - "casper"
form:
  - account
  - queue
  - auto_modules_matlab
  - bc_num_hours
  - bc_num_slots
  - num_cores
  - node_type
  - bc_vnc_resolution
  - bc_email_on_started
attributes:
  account:
    widget: select
    label: "Account"
    help: "Select the account to which your job will be charged."
    options:
      <%- CustomAccounts.accounts.each do |account| %>
      - "<%= account.strip %>"
      <%- end %>
  queue:
    widget: select
    label: "Cluster queue"
    help: "Select the queue to which your job will be submitted."
    options:
      <%- CustomQueues.queues.each do |queue| %>
      - "<%= queue.strip %>"
      <%- end %>
  auto_modules_matlab:
    default: false
  num_cores:
    widget: "number_field"
    label: "Number of cores"
    value: 1
    help: |
      The minimum and maximum will change based on your choice of cluster
      and node type.
    min: 1
    max: 28
    step: 1
  bc_num_slots: "1"
  bc_vnc_resolution:
    required: true
  